# GhostOS Minimal Kernel Configuration for Pi Zero W
CONFIG_ARM=y
CONFIG_ARCH_BCM2835=y
CONFIG_ARCH_MULTI_V6=y
CONFIG_ARM_THUMB=y
CONFIG_CPU_V6=y
CONFIG_VMSPLIT_2G=y
CONFIG_PREEMPT=y
CONFIG_AEABI=y
CONFIG_VFP=y
CONFIG_NEON=n  # Pi Zero doesn't have NEON

# BCM2835 Specific (Pi Zero W SoC)
CONFIG_ARCH_BCM=y
CONFIG_ARCH_BCM2835=y
CONFIG_BCM2835_MBOX=y
CONFIG_BCM2835_WDT=y
CONFIG_BCM2835_GPIO=y
CONFIG_BCM2835_PWM=y
CONFIG_BCM2835_THERMAL=y
CONFIG_BCM2835_TIMER=y
CONFIG_BCM2835_DMA=y
CONFIG_BCM2835_VCHIQ=y
CONFIG_SPI_BCM2835=y
CONFIG_I2C_BCM2835=y
CONFIG_PWM_BCM2835=y

# Memory Management
CONFIG_SWAP=y
CONFIG_CLEANCACHE=y
CONFIG_FRONTSWAP=y
CONFIG_ZSWAP=y
CONFIG_ZPOOL=y
CONFIG_ZBUD=y
CONFIG_Z3FOLD=y
CONFIG_ZSMALLOC=y
CONFIG_PGTABLE_MAPPING=y
CONFIG_BOUNCE=y
CONFIG_CMA=y
CONFIG_CMA_SIZE_MBYTES=32
CONFIG_FORCE_MAX_ZONEORDER=11

# CPU Frequency Scaling
CONFIG_CPU_FREQ=y
CONFIG_CPU_FREQ_STAT=y
CONFIG_CPU_FREQ_DEFAULT_GOV_ONDEMAND=y
CONFIG_CPU_FREQ_GOV_POWERSAVE=y
CONFIG_CPU_FREQ_GOV_USERSPACE=y
CONFIG_CPU_FREQ_GOV_ONDEMAND=y
CONFIG_CPU_FREQ_GOV_CONSERVATIVE=y

# Power Management
CONFIG_PM=y
CONFIG_PM_SLEEP=y
CONFIG_SUSPEND=y
CONFIG_PM_RUNTIME=y
CONFIG_PM_DEBUG=n
CONFIG_APM_EMULATION=n
CONFIG_PM_CLK=y
CONFIG_CPU_PM=y
CONFIG_ARCH_SUSPEND_POSSIBLE=y

# Wireless (BCM43430)
CONFIG_WIRELESS=y
CONFIG_CFG80211=y
CONFIG_MAC80211=y
CONFIG_RFKILL=y
CONFIG_BRCMFMAC=y
CONFIG_BRCMFMAC_SDIO=y
CONFIG_BRCMUTIL=y
CONFIG_BRCMFMAC_PROTO_BCDC=y
CONFIG_BRCMFMAC_SDIO_OOB=y
CONFIG_BRCMFMAC_PCIE=n  # Not needed for Zero W

# MMC/SD Card Support
CONFIG_MMC=y
CONFIG_MMC_BLOCK=y
CONFIG_MMC_BCM2835=y
CONFIG_MMC_BCM2835_SDHOST=y
CONFIG_MMC_SDHCI=y
CONFIG_MMC_SDHCI_PLTFM=y
CONFIG_MMC_SDHCI_BCM2835=y

# USB Support (Minimal)
CONFIG_USB=y
CONFIG_USB_DWC2=y
CONFIG_USB_STORAGE=y
CONFIG_USB_UAS=n
CONFIG_USB_SERIAL=y
CONFIG_USB_SERIAL_CONSOLE=n
CONFIG_USB_SERIAL_GENERIC=y
CONFIG_USB_ACM=n
CONFIG_USB_PRINTER=n

# File Systems
CONFIG_EXT4_FS=y
CONFIG_EXT4_USE_FOR_EXT2=y
CONFIG_EXT4_FS_POSIX_ACL=n
CONFIG_EXT4_FS_SECURITY=n
CONFIG_FS_ENCRYPTION=n
CONFIG_VFAT_FS=y
CONFIG_FAT_DEFAULT_CODEPAGE=437
CONFIG_FAT_DEFAULT_IOCHARSET="ascii"
CONFIG_SQUASHFS=y
CONFIG_SQUASHFS_FILE_DIRECT=y
CONFIG_SQUASHFS_DECOMP_SINGLE=y
CONFIG_SQUASHFS_XATTR=n
CONFIG_SQUASHFS_ZLIB=y
CONFIG_SQUASHFS_XZ=y
CONFIG_OVERLAY_FS=y

# Network Support
CONFIG_PACKET=y
CONFIG_UNIX=y
CONFIG_INET=y
CONFIG_IPV6=n
CONFIG_NETFILTER=y
CONFIG_NETFILTER_ADVANCED=n
CONFIG_NF_CONNTRACK=y
CONFIG_NF_CONNTRACK_IPV4=y
CONFIG_IP_NF_IPTABLES=y
CONFIG_IP_NF_FILTER=y
CONFIG_IP_NF_TARGET_REJECT=y
CONFIG_NET_SCHED=y
CONFIG_NET_SCH_FQ_CODEL=y

# Ghost System Features
CONFIG_GHOST_PREEMPT=y
CONFIG_GHOST_SCHED=y
CONFIG_GHOST_MM=y
CONFIG_GHOST_NET=y
CONFIG_GHOST_GPIO=y
CONFIG_GHOST_NEURAL=y

# Debug & Development (Disabled)
CONFIG_DEBUG_KERNEL=n
CONFIG_KGDB=n
CONFIG_MAGIC_SYSRQ=n
CONFIG_DEBUG_FS=n
CONFIG_DETECT_HUNG_TASK=n
CONFIG_SCHEDSTATS=n
CONFIG_DEBUG_PREEMPT=n
CONFIG_DEBUG_SPINLOCK=n
CONFIG_DEBUG_MUTEXES=n
CONFIG_DEBUG_ATOMIC_SLEEP=n
CONFIG_STACKTRACE=n
CONFIG_LOCKUP_DETECTOR=n
CONFIG_HARDLOCKUP_DETECTOR=n
CONFIG_BOOTPARAM_HARDLOCKUP_PANIC=n
CONFIG_BOOTPARAM_SOFTLOCKUP_PANIC=n

# Security Features (Minimal)
CONFIG_SECURITY=y
CONFIG_SECURITY_NETWORK=y
CONFIG_SECURITY_PATH=n
CONFIG_SECURITY_SELINUX=n
CONFIG_SECURITY_SMACK=n
CONFIG_SECURITY_TOMOYO=n
CONFIG_SECURITY_APPARMOR=n
CONFIG_DEFAULT_SECURITY_DAC=y
CONFIG_CRYPTO=y
CONFIG_CRYPTO_AES=y
CONFIG_CRYPTO_SHA256=y
CONFIG_CRYPTO_MANAGER=y
CONFIG_CRYPTO_USER=n

# Remove Unnecessary Features
CONFIG_KALLSYMS=n
CONFIG_IKCONFIG=n
CONFIG_IKCONFIG_PROC=n
CONFIG_PROFILING=n
CONFIG_MARKERS=n
CONFIG_TRACING=n
CONFIG_EVENT_TRACING=n
CONFIG_FTRACE=n
CONFIG_FUNCTION_TRACER=n
CONFIG_IRQSOFF_TRACER=n
CONFIG_SCHED_TRACER=n
CONFIG_STACK_TRACER=n
CONFIG_BLK_DEV_IO_TRACE=n
CONFIG_KPROBE_EVENTS=n
CONFIG_UPROBE_EVENTS=n
CONFIG_PROBE_EVENTS=n
